<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bwie.jingdong.activity.MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/lin"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb1"
            android:text="首页"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/shouye2"
            android:layout_weight="1"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/rb2"
            android:text="分类"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/fenlei2"
            android:layout_weight="1"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/rb3"
            android:text="购物车"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/gouwuche2"
            android:layout_weight="1"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/rb4"
            android:text="我的"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/wode2"
            android:layout_weight="1"
            android:button="@null"/>
    </RadioGroup>
</LinearLayout>
